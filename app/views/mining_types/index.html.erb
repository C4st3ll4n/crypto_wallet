<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.mining_type.other') %></h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th><%= MiningType.human_attribute_name(:description) %></th>
    <th><%= MiningType.human_attribute_name(:acronym) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @mining_types.each do |mining_type| %>
    <tr>
      <td><%= mining_type.description %></td>
      <td><%= mining_type.acronym %></td>
      <td><%= link_to t('links.show'), mining_type, class: "btn btn-dark" %></td>
      <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class: "btn btn-success" %></td>
      <td><%= link_to t('links.delete'), mining_type, method: :delete,
                      data: { confirm: t('messages.confirm_delete') },
                      class: "btn btn-danger" %></td>

    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('messages.new_minig'), new_mining_type_path, class: "btn btn-success" %>
