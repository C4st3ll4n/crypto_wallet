<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %>
        prohibited this coin from being saved:</h2>
      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :description %>
    <%= form.text_field :description,  class:"form-control",
    placeholder:"Bitcoin"%>
  </div>

  <div class="form-group mb-3">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control",
    placeholder:"BTC"%>
  </div>

  <div class="form-group mb-3">
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class:"form-control",
    placeholder:"https://...."%>
    <%=
      if coin&.url_image
        image_tag coin.url_image, width: 25, height: 25
      end
    %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :mining_type %>
    <%= form.select("mining_type_id", @mining_type_options,
                    {include_blank:"Selecione.."},
                    class:"form-control") %>
  </div>
  <div class="actions">
    <%= form.submit nil, class:"btn btn-success"%>
  </div>
<% end %>
<br>