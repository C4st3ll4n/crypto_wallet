<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.coin.other') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%=@coins.human_attribute_name(:description)%></th>
      <th><%=@coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, width: 30, height: 30 %></td>
        <td><%= link_to t('links.show'), coin , class: "btn btn-dark" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class: "btn btn-success" %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete,
                        data: { confirm: t('messages.confirm_delete') },
                        class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('messages.new_coin'), new_coin_path , class: "btn btn-success"%>
<%= link_to t('activerecord.models.mining_type.other'), mining_types_path , class: "btn btn-dark"%>
